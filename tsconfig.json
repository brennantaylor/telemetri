{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
